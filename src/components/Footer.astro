---
import { Image } from 'astro:assets';
import Logo from '../assets/logo.png';
import { url } from '../consts';

const year = new Date().getFullYear();
---

<footer>
	<div class="footer-inner">
		<div class="footer-top">
			<div class="footer-brand">
				<Image src={Logo} alt="Yupay" height={32} class="logo-img" />
				<p class="tagline">Educación financiera para Bolivia</p>
				<p class="quechua-note">
					<em>Yupay</em> significa "contar" en quechua.
				</p>
			</div>
			<div class="footer-links">
				<div class="link-col">
					<h4>Contenido</h4>
					<a href={url('/blog')}>Blog</a>
					<a href={url('/about')}>Nosotros</a>
					<a href={url('/rss.xml')}>RSS</a>
				</div>
				<div class="link-col">
					<h4>Próximamente</h4>
					<span class="coming-item">App Yupay <span class="badge">En desarrollo</span></span>
					<span class="coming-item">Calculadoras <span class="badge">En desarrollo</span></span>
					<span class="coming-item">Herramientas <span class="badge">En desarrollo</span></span>
				</div>
			</div>
		</div>
		<div class="footer-bottom">
			<p>&copy; {year} Yupay. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background-color: var(--yupay-black);
		color: #d1d5db;
		padding: 3em 1.5em 1.5em;
	}
	.footer-inner {
		max-width: 1100px;
		margin: 0 auto;
	}
	.footer-top {
		display: flex;
		justify-content: space-between;
		gap: 2em;
		flex-wrap: wrap;
		margin-bottom: 2em;
	}
	.footer-brand {
		max-width: 260px;
	}
	.footer-brand :global(.logo-img) {
		border-radius: 0;
		filter: brightness(0) invert(1);
		height: 32px;
		width: auto;
		margin-bottom: 0.75em;
	}
	.tagline {
		font-size: 0.9em;
		color: #9ca3af;
		margin-bottom: 0.4em;
	}
	.quechua-note {
		font-size: 0.8em;
		color: #6b7280;
		margin: 0;
	}
	.footer-links {
		display: flex;
		gap: 3em;
		flex-wrap: wrap;
	}
	.link-col {
		display: flex;
		flex-direction: column;
		gap: 0.5em;
	}
	.link-col h4 {
		color: var(--yupay-yellow);
		font-size: 0.85em;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		margin: 0 0 0.25em 0;
	}
	.link-col a {
		color: #d1d5db;
		text-decoration: none;
		font-size: 0.9em;
		transition: color 0.2s ease;
	}
	.link-col a:hover {
		color: var(--yupay-yellow);
	}
	.coming-item {
		font-size: 0.9em;
		color: #6b7280;
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	.badge {
		background-color: #2d2d2d;
		color: var(--yupay-honey);
		font-size: 0.7em;
		padding: 0.15em 0.5em;
		border-radius: 9999px;
		font-weight: 600;
		white-space: nowrap;
	}
	.footer-bottom {
		border-top: 1px solid #2d2d2d;
		padding-top: 1.5em;
		text-align: center;
	}
	.footer-bottom p {
		font-size: 0.85em;
		color: #6b7280;
		margin: 0;
	}
</style>
