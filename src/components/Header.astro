---
import { Image } from 'astro:assets';
import Logo from '../assets/logo.png';
import { url } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href={url('/')} class="logo-link">
			<Image src={Logo} alt="Yupay" height={36} />
		</a>
		<div class="nav-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">Nosotros</HeaderLink>
		</div>
		<a href={url('/blog')} class="cta-btn">Leer art√≠culos</a>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		margin: 0;
		padding: 0 1.5em;
		background: white;
		border-bottom: 3px solid var(--yupay-yellow);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1100px;
		margin: 0 auto;
		height: 64px;
	}
	.logo-link {
		display: flex;
		align-items: center;
		text-decoration: none;
		flex-shrink: 0;
	}
	.logo-link img {
		border-radius: 0;
		height: 36px;
		width: auto;
	}
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.25em;
	}
	.nav-links :global(a) {
		padding: 0.5em 0.75em;
		border-radius: 6px;
	}
	.nav-links :global(a:hover),
	.nav-links :global(a.active) {
		background-color: #fff8e6;
	}
	.cta-btn {
		background-color: var(--yupay-yellow);
		color: var(--yupay-black);
		font-weight: 700;
		padding: 0.5em 1.25em;
		border-radius: 8px;
		text-decoration: none;
		font-size: 0.9em;
		transition: background-color 0.2s ease;
		white-space: nowrap;
	}
	.cta-btn:hover {
		background-color: var(--yupay-yellow-dark);
		color: var(--yupay-black);
	}
	@media (max-width: 720px) {
		header { padding: 0 1em; }
		.cta-btn { display: none; }
		.nav-links { gap: 0; }
		.nav-links :global(a) { padding: 0.4em 0.5em; font-size: 0.9em; }
	}
</style>
