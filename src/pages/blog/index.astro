---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import PostCard from '../../components/PostCard.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={`Blog — ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.section-label {
				display: block;
				font-size: 0.75em;
				font-weight: 700;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: var(--yupay-amber);
				margin-bottom: 0.6em;
			}
			.blog-hero {
				background: var(--yupay-cream);
				padding: 4.5em 1.5em 3.5em;
				text-align: center;
				border-bottom: 3px solid var(--yupay-yellow);
			}
			.blog-hero h1 {
				font-size: clamp(1.8em, 4vw, 2.6em);
				color: var(--yupay-black);
				margin: 0 0 0.4em;
			}
			.blog-hero p {
				color: var(--yupay-gray);
				font-size: 1.05em;
				margin: 0;
			}
			.blog-main {
				max-width: 1100px;
				margin: 0 auto;
				padding: 3.5em 1.5em 5em;
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1.75em;
			}
			.empty-state {
				text-align: center;
				padding: 4em 1em;
				color: var(--yupay-gray);
			}
			@media (max-width: 720px) {
				.posts-grid {
					grid-template-columns: 1fr;
				}
				.blog-main { padding: 2em 1em 3em; }
			}
		</style>
	</head>
	<body>
		<Header />

		<section class="blog-hero">
			<span class="section-label">Todos los artículos</span>
			<h1>Blog</h1>
			<p>Artículos sobre finanzas personales pensados para Bolivia</p>
		</section>

		<div class="blog-main">
			{posts.length === 0 ? (
				<div class="empty-state">
					<p>Pronto publicaremos nuevos artículos. ¡Vuelve pronto!</p>
				</div>
			) : (
				<div class="posts-grid">
					{posts.map((post) => <PostCard post={post} />)}
				</div>
			)}
		</div>

		<Footer />
	</body>
</html>
